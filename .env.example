# ValidaÍ - Configurações de Ambiente
# Copie este arquivo para .env e configure suas chaves

# API Keys obrigatórias
PERPLEXITY_API_KEY=your_perplexity_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# WhatsApp Business API (opcional para desenvolvimento)
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# Configurações da aplicação
DEBUG=true
ENVIRONMENT=development

# URLs das APIs (mantenha os padrões)
PERPLEXITY_BASE_URL=https://api.perplexity.ai
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# Limites e timeouts
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
API_TIMEOUT=30
SCRAPING_TIMEOUT=60
MAX_TEXT_LENGTH=10000

# Configurações de confiança
MIN_CONFIDENCE_THRESHOLD=50
MAX_SOURCES_PER_VERIFICATION=5